<table class="attr">
    <tr>
        <th>ユーザー名</th>
        <td><%= @user.name %>
    </tr>
    <tr>
        <th>性別</th>
        <td><%= @user.sex == 1 ? "男" : "女" %></td>
    </tr>
    <tr>
        <th>誕生日</th>
        <td><%= @user.birthday&.strftime("%Y年%m月%d日") %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @user.phone %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
    </tr>
</table>