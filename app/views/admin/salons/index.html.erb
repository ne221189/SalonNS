<% @page_title = "美容院管理" %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "美容院の追加", :new_admin_salon %></div>

<%= render "admin/shared/salon_form" %>

<% if @salons.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>美容院名</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @salons.each do |salon| %>
        <tr>
          <td><%= link_to salon.name, [:admin, salon] %></td>
          <td>
            <%= link_to "編集", [:edit, :admin, salon] %> |
            <%= link_to "削除", [:admin, salon], method: :delete,
                        data: { confirm: "本当に削除しますか?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
