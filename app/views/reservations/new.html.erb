<% @page_title = "予約" %>
<h1><%= @page_title %></h1>

<% salon = Salon.find(@stylist.salon_id) %>
<div class="toolbar"><%= link_to "詳細に戻る", salon %></div>

<table class="attr">
  <tr>
    <th>店舗</th>
    <td><%= Salon.find(@stylist.salon_id).name %></td>
  </tr>
  <tr>
    <th>スタイリスト</th>
    <td><%= @stylist.name %></td>
  </tr>
  <tr>
    <th>コース</th>
    <td><%= @course.name %> (所要時間<%= @required_time * 30 %>分)</td>
  </tr>
</table>
<h2>予約可能な時間</h2>
<%= form_for @reservation, url: reservations_path do |form| %>
  <%= render "shared/reservation_form", form: form %>
  <div><%= form.submit "予約", data: { confirm: "本当に予約しますか?"} %></div>
<% end %>
<div class="toolbar"><%= link_to "詳細に戻る", salon %></div>