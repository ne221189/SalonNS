<% @page_title = "スタイリスト一覧" %>
<h1><%= @page_title %></h1>

<%#= @res_cnt %>
<% if current_owner.salon %>
  <div class="toolbar"><%= link_to "スタイリストの追加", :new_owner_stylist %></div>
<% end %>

<% if @stylists.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>名前</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @stylists.each do |stylist| %>
      <tr>
        <td><%= link_to stylist.name, [:owner, stylist] %></td>
        <td>
          <%= link_to "編集", [:edit, :owner, stylist] %> |
          <%= link_to "削除", [:owner, stylist], method: :delete,
                      data: { confirm: "本当に削除しますか?"} %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  スタイリストはいません
<% end %>
